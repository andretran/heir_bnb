<form>
  <div class='form-group'>

    <div class='input-group'>
      <label for='check-in' class='booking-label'>Check In</label>

      <input
          id='check-in'
          class='booking-form-input'
          type='text'
          name='space[title]'
          placeholder='mm/dd/yyyy'>
    </div>

    <div class='input-group'>
      <label for='check-out' class='booking-label'>Check Out</label>

      <input
          id='check-out'
          class='booking-form-input'
          type='text'
          name='space[title]'
          placeholder='mm/dd/yyyy'>
    </div>
  </div>

    <button type='submit' class='booking-button'>Request to Book</button>
</form>
