<div
  class='modal fade'
  id='editModal'
  tabindex="-1"
  role="dialog"
  aria-labelledby="editModal"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button
            type="button"
            class="close"
            data-dismiss="modal">
                  <span aria-hidden="true">&times;</span>
                  <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="editModal">Edit Profile</h4>
      </div>


      <div class="modal-body">
        <form enctype="multipart/form-data">
          <div class='form-group'>
            <label>
                First Name
              <input
                type='text'
                class='form-control'
                name='user[first_name]'
                value='<%= user.escape("first_name") %>'>
            </label>
            <label>
              Last Name
              <input
                type='text'
                class='form-control'
                name='user[last_name]'
                value='<%= user.escape("last_name") %>'>
            </label>
          </div>

          <div class='form-group'>
            <input type='file' name='user[avatar]' accept='image/*' multiple id='images'>
          </div>
          <button type='submit' class='btn btn-primary'>Save Changes</button>
        </form>
      </div>
    </div>
  </div>
</div>
