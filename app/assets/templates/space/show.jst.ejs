<div class='space-banner container-full'>
  <div class='col-xs-1 col-xs-offset-2' style='text-align:center'>
    <a href='#/profile/<%= space.escape("user_id") %>'>
        <img src='<%= space.get("user_avatar") %>' class='img-circle owner-avatar'>
        <div class='owner-name'>
          <%= space.escape("user_name") %>
        </div>
    </a>
  </div>
  <div class='col-xs-4 space-right'>
    <div clss='title-header'>
      <h1 id='space-title'> <%= space.escape('title') %> </h1>
    </div>
    <div class='space-show-location'>
      <%= space.escape('location') %>
    </div>
  </div>

  <div class='affix' id='right-info-box'>
      <div class='price-box'>
        <%= "$ " + space.escape("price")  %>
      </div>
      <div class='booking-form'>
      </div>
  </div>
</div>

<div style='background: #F5F5F5'>
  <div class='container-full'>
    <div class='row'>
      <div class='col-xs-5 col-xs-offset-2' id='left-info-box'>

        <div class='content'>
          <h3> About This Listing </h3>
          <%= space.escape('about') %>
        </div>

        <img src='<%= space.get("photo_url") %>' class='show-image'>


        <div class='container-full description-box'>
          <div class='col-xs-2 left-description'>Description</div>
          <div class='col-xs-10 right-description'>
             <div style='white-space: pre-line;'>
               <%= space.get('description') %>
             </div>
          </div>
        </div>


      </div>


    </div>
  </div>
</div>
<% if (space.reviews().length > 0) { %>
  <div id='reviews-box' class='container-full'>
    Summary
  </div>
<% } %>
